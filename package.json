{
  "name": "agentpay-protocol",
  "version": "1.0.0",
  "description": "AI-powered autonomous payment orchestration system using x402 on Cronos EVM",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "server": "ts-node src/server-prod.ts",
    "demo": "ts-node src/x402-server.ts",
    "start:x402": "ts-node src/x402-server.ts",
    "mcp": "ts-node src/mcp-server.ts",
    "agent": "ts-node src/agent/index.ts",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network cronosTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network cronosMainnet"
  },
  "keywords": [
    "x402",
    "cronos",
    "ai-agent",
    "payments",
    "defi",
    "mcp",
    "a2a",
    "groq"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.10",
    "hardhat": "^2.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
